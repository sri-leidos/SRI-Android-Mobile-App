<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sri_background_gradient"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <!-- HORIZONTAL layout -->
        <!-- SRI TOP BAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:background="#212d3a"
            android:padding="10dp"
            >

            <!-- SRI LOGO -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|left"
                android:background="@drawable/sri_logo"
                android:layout_marginRight="10dp"

                />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="right|center_vertical">

                <Button
                    android:id="@+id/profileBackBtn"
                    android:layout_height="40dp"
                    android:layout_width="110dp"

                    android:layout_gravity="center_vertical|right"

                    android:background="@drawable/sri_button_logout"

                    android:text="BACK"
                    android:textColor="#FFF"
                    android:textSize="12sp"
                    android:textStyle="bold|normal"

                    android:typeface="sans" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="10dp"
            android:background="@drawable/sri_background_gradient"
            android:orientation="vertical"
            >


            <LinearLayout
                android:id="@+id/truckLay_image_linLay"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="5"

                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"

                android:orientation="horizontal"
                >

                <srimobile.aspen.leidos.com.sri.utility.CustomImageView
                    android:id="@+id/truckLay_takeTruckImage_imgBtn"

                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"

                    />

                <!--<ImageButton-->
                    <!--android:id="@+id/truckLay_takeTruckImage_imgBtn"-->

                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="5"-->

                    <!--android:layout_gravity="center_horizontal"-->

                    <!--android:text="UPDATE TRUCK PHOTO"-->
                    <!--/>-->

            </LinearLayout>

            <!--<LinearLayout-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="6dp"-->

                <!--android:layout_centerHorizontal="true"-->
                <!--android:orientation="horizontal"-->
                <!--/>-->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_weight="5"

                android:layout_centerHorizontal="true"

                android:orientation="horizontal"
                >
                <Switch
                    android:id="@+id/truckLay_CDL_tglBtn"

                    android:inputType="text|textMultiLine|textNoSuggestions"
                    android:textColor="#ffffffff"
                    android:textColorHint="#cccccccc"
                    android:textSize="16sp"
                    android:switchMinWidth="75dp"
                    android:gravity="bottom"

                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    />

                <EditText
                    android:id="@+id/truckLay_CDL_DL_edtTxt"

                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"

                    android:layout_alignParentBottom="true"
                    android:gravity="bottom"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 "

                    android:inputType="text|textMultiLine|textNoSuggestions"
                    android:textColor="#ffffffff"
                    android:textColorHint="#cccccccc"
                    android:textSize="16sp"
                    />
            </LinearLayout>



            <!-- VIN -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="6dp"

                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="5"

                android:layout_centerHorizontal="true"

                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"

                    android:paddingBottom="10dp"
                    android:gravity="bottom"

                    android:text="* VIN:"

                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 "

                    android:inputType="text|textMultiLine|textNoSuggestions"
                    android:textColor="#ffffffff"
                    android:textColorHint="#cccccccc"
                    android:textSize="16sp"
                    />

                <EditText
                    android:id="@+id/truckLay_VIN_edtTxt"

                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"

                    android:layout_alignParentBottom="true"
                    android:gravity="bottom"

                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 "
                    android:hint="VIN"

                    android:inputType="text|textMultiLine|textNoSuggestions"
                    android:textColor="#ffffffff"
                    android:textColorHint="#cccccccc"
                    android:textSize="16sp"
                    />
            </LinearLayout>


            <!-- -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="6dp"

                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="5"

                android:layout_centerHorizontal="true"

                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"

                    android:paddingBottom="10dp"
                    android:gravity="bottom"

                    android:text="* USDOT:"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 "

                    android:inputType="text|textMultiLine|textNoSuggestions"
                    android:textColor="#ffffffff"
                    android:textColorHint="#cccccccc"
                    android:textSize="16sp"
                    />

                <EditText
                    android:id="@+id/truckLay_USDOT_edtTxt"

                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"

                    android:layout_alignParentBottom="true"
                    android:gravity="bottom"

                    android:hint="USDOT"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 "

                    android:inputType="text|textMultiLine|textNoSuggestions"
                    android:textColor="#ffffffff"
                    android:textColorHint="#cccccccc"
                    android:textSize="16sp"
                    />
            </LinearLayout>



            <!-- new license -->


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="6dp"

                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"

                android:layout_centerHorizontal="true"

                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"

                    android:paddingBottom="10dp"

                    android:gravity="bottom"
                    android:text="* LICENSE PLATE:"

                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 "

                    android:inputType="text|textMultiLine|textNoSuggestions"
                    android:textColor="#ffffffff"
                    android:textColorHint="#cccccccc"
                    android:textSize="16sp"
                    />

                <EditText
                    android:id="@+id/truckLay_LP_edtTxt"

                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"

                    android:layout_alignParentBottom="true"
                    android:hint="LICENSE PLATE"
                    android:gravity="bottom"

                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 "

                    android:inputType="text|textMultiLine|textNoSuggestions"
                    android:textColor="#ffffffff"
                    android:textColorHint="#cccccccc"
                    android:textSize="16sp"
                    />
            </LinearLayout>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="6dp"

                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="5"

                android:layout_centerHorizontal="true"

                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/truckLay_cancelTruckInfo_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"

                    android:gravity="center"

                    android:background="@drawable/cancel_truck_button"

                    android:text="CANCEL"

                    android:inputType="text|textMultiLine|textNoSuggestions"
                    android:textColor="#ffffffff"
                    android:textColorHint="#cccccccc"
                    android:textSize="16sp"

                    />


                <LinearLayout
                    android:layout_width="6dp"
                    android:layout_height="fill_parent"

                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    />

                <Button
                    android:id="@+id/truckLay_saveTruckInfo_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"

                    android:gravity="center"

                    android:background="@drawable/save_truck_button"

                    android:text="SAVE"

                    android:inputType="text|textMultiLine|textNoSuggestions"
                    android:textColor="#ffffffff"
                    android:textColorHint="#cccccccc"
                    android:textSize="16sp"

                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="6dp"

                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"

                    android:layout_centerHorizontal="true"

                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:text="*REQUIRED FIELDS"
                        />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


</ScrollView>
